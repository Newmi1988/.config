#/usr/bin/env bash

function tsd() {
    if [ -z "$1" ] || [ -z "$2" ]; then
        cat << EOF
tmux session with directory

Usage:
    tsd <name> <dir>
EOF

    else
        if [ -n "$TMUX" ]; then
            tmux new -s $1 -c $2 -d
            tmux switch -t $1 && cx
        else
            tmux new -s $1 -c $2
            tmux attach -t $1
        fi
    fi
}

tsd $1 $2
